<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2">
    <ImageView
        android:id="@+id/book_pic"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@mipmap/demo"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_toRightOf="@id/book_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="斗罗大陆"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="唐家三少"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/book_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类：2019-12-12"
            android:layout_marginTop="5dp"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/book_time"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新时间：2019-12-12"
            android:textSize="15dp"/>
    </LinearLayout>
    <View
        android:layout_below="@id/book_pic"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9">
    <RelativeLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sortBook_pic"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@mipmap/demo"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_toRightOf="@id/sortBook_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/sortBook_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="斗罗大陆"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/sortBook_author"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="唐家三少"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/sortBook_cat"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/sortBook_info"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介"
                android:maxLines="2"
                android:lines="2"
                android:ellipsize="end"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@id/lay_top"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">
    <com.youth.banner.Banner
        android:id="@+id/top_banner"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <LinearLayout
        android:id="@+id/lay_nav"
        android:layout_below="@id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_sort"
            android:text="分类"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_rank"
            android:text="榜单"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text_Cartoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_cartoon"
            android:text="漫画"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_qua"
        android:layout_below="@id/lay_nav"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="精品推荐"
            android:drawableLeft="@mipmap/ic_line"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/qua_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一批"
            android:drawableLeft="@mipmap/ic_hyh"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/lay_qua"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/qua_recy"
            android:layout_marginLeft="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <ProgressBar
            android:id="@+id/qua_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>